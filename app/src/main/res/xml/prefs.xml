<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory

        android:title="Personal information" >
        <EditTextPreference
            android:key="user_name"
            android:summary="Please enter your name"
            android:title="Name" />
        <EditTextPreference
            android:key="user_email"
            android:summary="Enter your email"
            android:title="Email" />
    </PreferenceCategory>

    <PreferenceCategory

        android:title="Preferences" >

        <EditTextPreference
            android:key="IP"
            android:summary="Enter the IP address."
            android:title="IP" />
        <EditTextPreference
            android:key="port"
            android:summary="Enter the port number."
            android:title="Port" />


        <EditTextPreference
            android:key="ssid"
            android:summary="Enter your Wifi access point name"
            android:title="Wifi SSID" />
        <CheckBoxPreference
            android:key="TV"
            android:summary="On/Off"
            android:title="TV" />
        <CheckBoxPreference
            android:key="Music"
            android:summary="On/Off"
            android:title="Music" />

    <ListPreference
            android:entries="@array/intensity"
            android:entryValues="@array/intensity"
            android:key="intensity"
            android:summary="Set the light intensity"
            android:title="Light Intensity" />


        <ListPreference
            android:entries="@array/temp"
            android:entryValues="@array/temp"
            android:key="temp"
            android:summary="Set the temperature"
            android:title="AC Temperature" />
    </PreferenceCategory>
</PreferenceScreen>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#41b2ff">


    <Space
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/space" />


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/light1"
        android:layout_alignRight="@+id/space"
        android:layout_alignEnd="@+id/space"
        android:layout_below="@+id/space"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:background="#ffdb00"
        android:layout_margin="5dp"
        android:onClick="light1_click">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Light 1"
            android:id="@+id/light1txt"
            android:layout_gravity="center" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/light2"
        android:clickable="true"
        android:background="#ffdb00"
        android:layout_below="@+id/space"
        android:layout_toRightOf="@+id/space"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:onClick="light2_click">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Light 2"
            android:id="@+id/textView14"
            android:layout_gravity="center" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/ac1"
        android:clickable="true"
        android:background="#ffdb00"
        android:layout_below="@+id/light1"
        android:layout_alignLeft="@+id/light1"
        android:layout_alignStart="@+id/light1"
        android:layout_alignRight="@+id/light1"
        android:layout_alignEnd="@+id/light1"
        android:onClick="ac1_click">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEMP UP"
            android:id="@+id/button5"
            android:layout_gravity="left|bottom"
            android:textSize="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEMP DOWN"
            android:id="@+id/button8"
            android:layout_gravity="right|bottom"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="AC 1"
            android:id="@+id/textView15"
            android:layout_gravity="center" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/ac2"
        android:clickable="true"
        android:background="#ffdb00"
        android:onClick="ac2_click"
        android:layout_alignTop="@+id/ac1"
        android:layout_alignLeft="@+id/light2"
        android:layout_alignStart="@+id/light2"
        android:layout_alignRight="@+id/light2"
        android:layout_alignEnd="@+id/light2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEMP UP"
            android:id="@+id/button9"
            android:layout_gravity="left|bottom"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="AC 2"
            android:id="@+id/textView17"
            android:layout_gravity="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEMP DOWN"
            android:id="@+id/button10"
            android:layout_gravity="right|bottom"
            android:textSize="10dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/door"
        android:clickable="true"
        android:background="#ffdb00"
        android:onClick="door_click"
        android:layout_below="@+id/ac1"
        android:layout_alignLeft="@+id/ac1"
        android:layout_alignStart="@+id/ac1"
        android:layout_alignRight="@+id/ac1"
        android:layout_alignEnd="@+id/ac1"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Door Light"
            android:id="@+id/textView18"
            android:layout_gravity="center" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/proj"
        android:clickable="true"
        android:background="#ffdb00"
        android:onClick="projector_click"
        android:layout_alignTop="@+id/door"
        android:layout_alignRight="@+id/light2"
        android:layout_alignEnd="@+id/light2"
        android:layout_alignLeft="@+id/ac2"
        android:layout_alignStart="@+id/ac2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Projector"
            android:id="@+id/textView19"
            android:layout_gravity="center" />
    </FrameLayout>


</RelativeLayout>